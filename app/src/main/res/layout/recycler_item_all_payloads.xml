<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_item_all_payload"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:orientation="horizontal"
    app:cardElevation="3dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_customer_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:text="customer name"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_date_time"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:text="date and time"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/all_item_customer_name"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_rating"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:text="date and time"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/all_item_date_time"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_order_no"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:text="date and time"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/all_item_rating"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_edit"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:text="Edit"
            android:textColor="#CC3533"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_bar"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:text="|"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/all_item_edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_track"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:text="Track"
            android:textColor="#CC3533"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/all_item_bar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_label"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:padding="2dp"
            android:text=""
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/all_item_track"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_item_amount"
            android:layout_marginTop="30dp"
            android:layout_marginRight="80dp"
            android:padding="2dp"
            android:text="amount"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/all_item_track"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>


