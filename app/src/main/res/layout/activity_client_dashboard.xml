<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientDashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@mipmap/dheo_rocket_packages"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@mipmap/dheo_blog_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="195dp"
            android:src="@drawable/client_photo"
            app:civ_border_color="#FFF"
            app:civ_border_width="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cover" />
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/scooter"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/Next_pickups"
            android:background="@drawable/nex_pickup"
            android:text="Request Pickup"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/scooter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="name"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_photo" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pickup_agent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:scrollbars="vertical"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Next_pickups" />

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/pickup_request"
            android:background="@drawable/request_picup"
            android:text="Request Pickup"
            android:textColor="#FFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_pickup_agent" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="24dp"
            android:text="Balance:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pickup_request" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"
            android:text="0TK"
            android:textColor="#CC3533"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toEndOf="@+id/balance"
            app:layout_constraintTop_toBottomOf="@+id/pickup_request" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_dashboard_payloads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="vertical"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_payload_progressbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/see_more"
            android:text="See more >>"
            android:textStyle="italic"
            android:textColor="#FFF"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rounded_signup"
            app:layout_constraintTop_toBottomOf="@id/recycler_dashboard_payloads"
            app:layout_constraintEnd_toEndOf="parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#282827"
            android:id="@+id/relative_layout"
            app:layout_constraintTop_toBottomOf="@id/see_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/help_lagbe_1"
                android:layout_width="170dp"
                android:layout_marginTop="80dp"
                android:layout_height="170dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"
                android:src="@mipmap/help_lagbe" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="170dp"
                android:src="@mipmap/ph_white"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="150dp"
                android:src="@mipmap/fb_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/dashboard_phone"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="200dp"
                android:text="013-0137-7181"
                android:textColor="#FFF"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/dashboard_fb"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="200dp"
                android:text="Dheolife"
                android:textColor="#FFF"
                android:textStyle="italic"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/relative_layout1"
            app:layout_constraintTop_toBottomOf="@id/relative_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationY="-15dp"
                android:translationX="120dp"
                android:id="@+id/octopus_red_body"
                android:src="@drawable/octopus_red_body"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_my_delivery"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="My Deliveries"
                android:textColor="#FFF"
                android:background="@drawable/link_section"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_Billing"
                android:padding="10dp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="Billing"
                android:textColor="#FFF"
                android:background="@drawable/link_section"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_settings"
                android:padding="10dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="Settings"
                android:textColor="#FFF"
                android:background="@drawable/link_section"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_user_manual"
                android:padding="10dp"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="User Manual"
                android:textColor="#FFF"
                android:background="@drawable/link_section"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_logout"
                android:padding="10dp"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="Logout"
                android:textColor="#FFF"
                android:background="@drawable/link_section"/>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/state_line_monthly"
            android:layout_marginTop="4dp"
            android:background="#CC3533"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintTop_toBottomOf="@id/relative_layout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monthly_billing_bar1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:text="MONTHLY STATEMENTS"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/state_line_monthly"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monthly_billing_activity_bar2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:text="Looking for older deliveries? Get all of your records here, organized by month."
            android:textSize="15sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/monthly_billing_bar1"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_monthly_payload_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monthly_billing_activity_bar2" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monthly_record_payload_progressbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monthly_billing_activity_bar2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:id="@+id/relative_layout2"
            android:background="#CC3533"
            app:layout_constraintTop_toBottomOf="@id/recycler_monthly_payload_records"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_dheo_delivery"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Dheo delivery"
                android:textSize="20dp"
                android:textColor="#FFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_The_manual"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:text="The User Manual"
                android:textSize="20dp"
                android:textColor="#FFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_meet_team"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="90dp"
                android:text="Meet The Team"
                android:textSize="20dp"
                android:textColor="#FFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashboard_policy"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="130dp"
                android:text="Privacy Policy"
                android:textSize="20dp"
                android:textColor="#FFF"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@id/relative_layout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/block_logo_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="12dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp"
                android:text="@string/footer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="170dp"
                android:text="Â© 2017-2020, DHEO LLC. All Rights Reserved."
                android:textSize="11dp"
                android:textColor="#666"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"
                android:src="@drawable/ecab_new_logo"/>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>