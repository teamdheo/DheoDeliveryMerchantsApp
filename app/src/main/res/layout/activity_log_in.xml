<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LogInActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282827">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/dheo_login_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/lin1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/click"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_sign_up"
                android:text="Sign up"
                android:textColor="#FFF"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/click1"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/rounded_log_in"
                android:text="Login"
                android:textColor="#282827"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/lin2"
            app:layout_constraintTop_toBottomOf="@+id/lin1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lin3"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/rounded_edittext1"
                android:ems="13"
                android:hint="phone number"
                android:paddingLeft="20dp" />
            <EditText
                android:id="@+id/txtPwd"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_edittext1"
                android:ems="13"
                android:hint="password"
                android:inputType="textPassword"
                android:translationY="-5dp"
                android:paddingLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/lin3"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lin2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            android:gravity="center"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/rememberme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="50dp"
                android:buttonTint="#FFFFFF"
                android:padding="5dp"
                android:text="Remember me"
                android:textColor="#3aa8c1"
                android:textColorHint="#513636"/>

            <TextView
                android:id="@+id/forgrtpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Forget\npassword ?"
                android:textColor="#fff"
                android:textStyle="italic"/>

        </LinearLayout>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_buttontext"
            android:text="Login"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lin3"
            app:layout_constraintBottom_toTopOf="@+id/rel1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/rel1"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_marginTop="50dp"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"
                android:src="@mipmap/help_lagbe" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_marginTop="55dp"
                android:paddingBottom="10dp"
                android:paddingRight="50dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:background="@drawable/help_lagbe_bg"
                android:layout_marginLeft="180dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ph_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/phonecall"
                    android:text="013-0137-7181"
                    android:textColor="#FFF"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_marginTop="130dp"
                android:paddingBottom="10dp"
                android:paddingRight="90dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:background="@drawable/help_lagbe_bg"
                android:layout_marginLeft="180dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/fb_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/dheolife"
                    android:text="Dheolife"
                    android:textColor="#FFF"
                    android:textStyle="italic"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>