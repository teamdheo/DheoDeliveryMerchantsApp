<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payload_cancel_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="18dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:text="Are you sure you want to cancel this delivery?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payload_cancel_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="start">
        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:id="@+id/cancel_confirm"
            android:text="Confirm"
            android:textColor="#FFF"
            android:background="@drawable/rounded_signup"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cancel_cancel"
            android:text="Back"
            android:textColor="#000000"
            android:background="@drawable/defult_button"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>